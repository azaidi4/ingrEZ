@using ingrEZ.Models

<MudDialog>
  <DialogContent>
    <div class="d-flex mb-1">
      <MudText><b>Meal: </b>@Recipe.MealType</MudText>
      <MudDivider Class="mx-2" Vertical FlexItem/>
      <MudText><b>Difficulty: </b>@Recipe.Difficulty</MudText>
    </div>
    <div class="d-flex mb-1">
      <MudText><b>Preperation Time: </b>@Recipe.PreperationTime min</MudText>
      <MudDivider Class="mx-2" Vertical FlexItem/>
      <MudText><b>Serving Size: </b>@Recipe.ServingSize servings</MudText>
    </div>

    @if (Recipe.PinnedDate != null)
    {
      <MudText><b>Added On: </b>@Recipe.PinnedDate.Value.ToString("MMM d, hh:mm ttt")</MudText>
    }

    <br/>
    <MudText><b>Ingredients:</b></MudText>
    <ol class="ml-5">
      @foreach (var ingredient in Recipe.Ingredients)
      {
        <li>
          <MudText>@ingredient</MudText>
        </li>
      }
    </ol>
    <br/>
    <MudText><b>Instructions:</b></MudText>
    <ol class="ml-5">
      @foreach (var step in Recipe.ItemizedInstructions)
      {
        <li>
          <MudText>@step</MudText>
        </li>
      }
    </ol>
    @if (Recipe.Suggestions != null)
    {
      <br/>
      <MudText><b>Suggestions:</b></MudText>
      <ol class="ml-5">
        @foreach (var suggestion in Recipe.Suggestions)
        {
          <li>
            <MudText>@suggestion</MudText>
          </li>
        }
      </ol>
    }
    <br/>
  </DialogContent>
  <DialogActions/>
</MudDialog>

@code {
  [CascadingParameter] private MudDialogInstance MudDialog { get; set; } = new();

  [Parameter] public Recipe Recipe { get; set; } = new();
}