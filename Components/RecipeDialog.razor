<MudDialog>
  <DialogContent>
    <div class="d-flex mb-1">
      <MudText Typo="Typo.body1"><b>Meal: </b>@Recipe.MealType</MudText>
      <MudDivider Class="mx-2" Vertical FlexItem />
      <MudText Typo="Typo.body1"><b>Difficulty: </b>@Recipe.Difficulty</MudText>
    </div>
    <div class="d-flex">
      <MudText Typo="Typo.body1"><b>Preperation Time: </b>@Recipe.PreperationTime min</MudText>
      <MudDivider Class="mx-2" Vertical FlexItem />
      <MudText Typo="Typo.body1"><b>Serving Size: </b>@Recipe.ServingSize servings</MudText>
    </div>
    <br />
    <MudText Typo="Typo.body1"><b>Ingredients:</b></MudText>
    <ol class="ml-5">
      @foreach (var ingredient in Recipe.Ingredients)
      {
        <li>
          <MudText Typo="Typo.body1">@ingredient</MudText>
        </li>
      }
    </ol>
    <br />
    <MudText Typo="Typo.body1"><b>Instructions:</b></MudText>
    <ol class="ml-5">
      @foreach (var step in Recipe.ItemizedInstructions)
      {
        <li>
          <MudText Typo="Typo.body1">@step</MudText>
        </li>
      }
    </ol>
    @if (Recipe.Suggestions != null)
    {
      <br />
      <MudText Typo="Typo.body1"><b>Suggestions:</b></MudText>
      <ol class="ml-5">
      @foreach (var suggestion in Recipe.Suggestions)
        {
          <li>
            <MudText Typo="Typo.body1">@suggestion</MudText>
          </li>
        }
      </ol>
    }
  </DialogContent>
  <DialogActions />
</MudDialog>

@code {
  [CascadingParameter]
  private MudDialogInstance MudDialog { get; set; } = new();

  [Parameter]
  public Recipe Recipe { get; set; } = new();

  private void Submit() => MudDialog.Close(DialogResult.Ok(true));
}
